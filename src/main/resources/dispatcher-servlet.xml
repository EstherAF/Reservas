<!--    <context:component-scan base-package="com.citius.reservas" />-->

    <context:component-scan base-package="com.citius.reservas" use-default-filters="false">
        <context:include-filter expression="org.springframework.stereotype.Controller"
            type="annotation"/>
    </context:component-scan>
    
    <!--Habilitar anotaciones-->
    <s:global-method-security secured-annotations="enabled" />
    <tx:annotation-driven />
    
    <!--message converters: Jackson-->
    <bean id="jsonMessageConverter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
        <property name="objectMapper" ref="customJsonMapper" />
        <property name="supportedMediaTypes" value="application/json" />
    </bean>
    <mvc:annotation-driven> 
        <mvc:message-converters>
            <ref bean="jsonMessageConverter" />
        </mvc:message-converters>
    </mvc:annotation-driven>


    <!--Location changes
    It handler any request to change location.-->
    <mvc:interceptors>
        <bean id="localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
            <property name="paramName" value="lang" />
        </bean>
    </mvc:interceptors>
        
    <!--ViewResolver-->    
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
    
    <!--Rest Exceptions Handler-->
    <!-- Allow Exceptions to be handled in annotated methods if desired. Otherwise fallback to the
    'restExceptionResolver' below: -->
<!--    <bean id="annotationMethodHandlerExceptionResolver"
          class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerExceptionResolver">
        <property name="order" value="0"/>
    </bean>
    <bean id="restExceptionResolver" class="com.citius.reservas.handlerExceptions.RestExceptionHandler">
        <property name="order" value="100"/>
        <property name="messageConverters">
            <list>
                <ref bean="jsonMessageConverter"/>
            </list>
        </property>
        <property name="errorResolver">
            <bean class="com.citius.reservas.handlerExceptions.RestErrorResolverImpl">
                <property name="localeResolver" ref="localeResolver"/>
                <property name="exceptionMappingDefinitions">
                    <map>
                         404 
                        <entry key="com.citius.reservas.exceptions.UnknownResourceException" value="404, _exmsg"/>

                         500 (catch all): 
                        <entry key="Throwable" value="500"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>
    <bean id="handlerExceptionResolver" class="com.citius.reservas.exceptions.handler.ApplicationHandlerException">
        <property name="order" value="100"/>
    </bean>-->
        
</beans>
